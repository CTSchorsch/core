  },
  "entity": {
    "light": {
      "dim": {
        "name": "Dimmer"
      },
      "led": {
        "name": "LED"
      },
      "rgb": {
        "name": "RGB Dimmer"
      },
      "lbn": {
        "name": "Backlight"
      }
    },
    "switch": {
      "out": {
        "name": "[%key:component::switch::entity_component::switch::name%]"
      },
      "redled": {
        "name": "Red module LED"
      }
    },
    "binary_sensor": {
